<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="LoginTestSuite" verbose="1" >
    <test name="LoginTestsChrome" >
        <parameter name="browserName" value="chrome"/>
        <classes>
            <class name="test.LinkedinLoginTest" />
        </classes>
    </test>
    <test name="LoginTestsFirefox" >
        <parameter name="browserName" value="firefox"/>
        <classes>
            <class name="test.LinkedinLoginTest" />
        </classes>
    </test>
    <test name="LoginTestsLocalizationUK">
        <parameter name="browserUrl" value="https://uk.linkedin.com/"/>
        <groups>
            <run>
                <exclude name="validateUserEmailAndPassword"/>
                <exclude name="validateEmptyUserEmailAndUserPass"/>
            </run>
        </groups>
        <classes>
            <class name="test.LinkedinLoginTest">
                <methods>
                    <exclude name="validateUserEmailAndPassword"/>
                    <exclude name="validateEmptyUserEmailAndUserPass"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="LoginTestsLocalizationRU">
        <parameter name="browserUrl" value="https://ru.linkedin.com/"/>
        <groups>
            <run>
                <exclude name="validateUserEmailAndPassword"/>
                <exclude name="validateEmptyUserEmailAndUserPass"/>
            </run>
        </groups>

        <classes>
            <class name="test.LinkedinLoginTest">
                <methods>
                    <exclude name="validateUserEmailAndPassword"/>
                    <exclude name="validateEmptyUserEmailAndUserPass"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="LoginTestsLocalizationDE">
        <parameter name="browserUrl" value="https://de.linkedin.com/"/>
        <groups>
            <run>
                <exclude name="validateUserEmailAndPassword"/>
                <exclude name="validateEmptyUserEmailAndUserPass"/>
            </run>
        </groups>

        <classes>
            <class name="test.LinkedinLoginTest">
                <methods>
                    <exclude name="validateUserEmailAndPassword"/>
                    <exclude name="validateEmptyUserEmailAndUserPass"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>